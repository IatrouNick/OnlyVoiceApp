<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.acg.onlyvoiceapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlyVoiceApp">
        <activity android:name=".PostsDetails"/>
        <activity android:name=".MessageActivity"
            android:parentActivityName=".ChatActivity"/>
        <activity android:name=".ChatActivity" />
        <activity android:name=".PostsItems" />
        <activity android:name=".PostCreateActivity" />
        <activity android:name=".ShowProfile" />
        <activity android:name=".SearchUsersItems" />
        <activity android:name=".ProfileCreationActivity" />
        <activity android:name=".RegistrationActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".WallActivity" />
    </application>

</manifest>